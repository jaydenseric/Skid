{
  "name": "skid-slider",
  "version": "4.0.0",
  "description": "An ultra-lightweight slider that supports touch.",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "http://jaydenseric.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenseric/Skid.git"
  },
  "homepage": "https://github.com/jaydenseric/Skid#readme",
  "bugs": "https://github.com/jaydenseric/Skid/issues",
  "keywords": [
    "skid",
    "slider",
    "touch",
    "hurdler",
    "vanilla",
    "es6"
  ],
  "main": "dist/skid.js",
  "module": "dist/skid.module.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint '**/*.css'",
    "lint:docs": "documentation lint src",
    "prebuild": "npm run lint:js && npm run lint:css",
    "build": "rollup --config && postcss --use postcss-cssnext --map file --output dist/skid.css src/index.css",
    "postbuild": "npm run docs",
    "predocs": "npm run lint:docs",
    "docs": "documentation readme src --section API --quiet",
    "postdocs": "npm run tidydocs",
    "tidydocs": "sed -i '' '/Generated by documentation.js/d' ./readme.md && tidy-markdown < ./readme.md > ./readme-tidy.md && mv -f readme-tidy.md readme.md",
    "prepublish": "npm run build"
  },
  "peerDependencies": {
    "hurdler": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "documentation": "^4.0.0-beta13",
    "eslint": "^3.10.2",
    "eslint-config-barebones": "^0.1.3",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.8.0",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "stylelint": "^7.6.0",
    "stylelint-config-barebones": "^0.1.2",
    "tidy-markdown": "^2.0.4"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false,
          "loose": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "barebones"
  },
  "stylelint": {
    "extends": "stylelint-config-barebones"
  }
}
